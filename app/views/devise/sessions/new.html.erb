<div class="container">
  <h2>ورود</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label 'رایانامه', :class => "validate" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "validate" %>
    </div>

    <div class="field">
      <%= f.label 'گذرواژه', :class => "validate" %><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => "validate" %>
    </div>


    <div class="actions">
      <%= f.submit "ورود", :class => "waves-effect waves-light btn deep-purple darken-2"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
